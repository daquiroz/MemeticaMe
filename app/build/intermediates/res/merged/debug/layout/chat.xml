<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="#ffe7ecf5">
<!-- Displays the text chat -->
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/relativeLayout1"
        android:background="#6290DA">
        <ImageButton
            android:src="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:id="@+id/back"
            android:background="@drawable/menubutton"
            android:paddingRight="30dp"
            android:padding="12dp"
            android:paddingLeft="10dp"
            android:scaleType="fitCenter" />
        <ImageView
            android:src="@drawable/user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView2"
            android:layout_marginLeft="30dp"
            android:scaleType="centerInside"
            android:tint="#ffffffff"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
        <ImageButton
            android:src="@drawable/dog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/meme"
            android:layout_alignParentRight="true"
            android:tint="#ffffffff"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:background="@drawable/menubutton"
            android:layout_marginRight="40dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginLeft="78dp"
            android:minLines="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#ffffffff"
            android:layout_marginRight="128dp"
            android:layout_centerVertical="true" />
        <ImageButton
            android:id="@+id/menu"
            android:background="@drawable/menubutton"
            android:src="@drawable/menu"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:scaleType="fitEnd"
            android:layout_alignParentRight="true"
            android:tint="#ffffffff"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />
        <ImageButton
            android:src="@drawable/clip"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/clip"
            android:layout_alignParentRight="true"
            android:tint="#ffffffff"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:onClick="startBlob"
            android:background="@drawable/menubutton"
            android:layout_marginRight="84dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/listViewChat"
        android:layout_above="@+id/forms_centralfragments_chat_chat_editLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ffe7ecf5"
        android:clipToPadding="false"
        android:listSelector="#00000000"
        android:divider="@null"
        android:layout_marginTop="48dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
    <LinearLayout
        android:id="@+id/forms_centralfragments_chat_chat_editLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/textNewChat"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textMultiLine"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/field"
            android:paddingRight="10dp"
            android:paddingLeft="10dp" />
        <ImageButton
            android:id="@+id/buttonAddChat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="#FFFFFF"
            android:src="@drawable/send"
            android:onClick="addItem"
            android:background="@drawable/button"
            android:tint="#ffffffff"
            android:padding="12dp"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <ImageView
        android:src="@null"
        android:layout_height="match_parent"
        android:id="@+id/touch"
        android:layout_width="match_parent" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:clickable="true"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:id="@+id/attachment"
        android:layout_marginTop="48dp"
        android:background="#ffffffff">
        <LinearLayout
            android:orientation="vertical"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/file">
            <ImageView
                android:src="@drawable/fileselector"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/fileButton"
                android:padding="10dp"
                android:onClick="attach"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />
            <TextView
                android:text="Archivo"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent"
            android:id="@+id/record">
            <ImageView
                android:src="@drawable/recordselector"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/recordButton"
                android:padding="10dp"
                android:onClick="attach"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />
            <TextView
                android:text="GrabaciÃ³n"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="match_parent"
            android:id="@+id/picture">
            <ImageView
                android:src="@drawable/photoselector"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/pictureButton"
                android:padding="10dp"
                android:onClick="attach"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />
            <TextView
                android:text="Foto"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_weight="1">

            <ImageView
                android:layout_width="79dp"
                android:layout_height="86dp"
                android:id="@+id/imageMediaBrowser"
                android:src="@drawable/stop"
                android:onClick="browseMedia"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="65dp"
                android:layout_height="32dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView2"
                android:text="MediaBrowser" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Users/Francesca/Desktop/MemeticaMe/MemeticaMe/app/src/main/res/layout/chat.xml -->