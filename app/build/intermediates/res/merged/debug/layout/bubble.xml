<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/textUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="hola" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bubble"
        android:background="@drawable/bubble_green">
        <TextView
            android:id= "@+id/textChatItem"
            android:maxWidth="230dp"
            android:textColor="#000000"
            android:text="hola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp" />
        <ImageView
            android:src="@drawable/clock"
            android:id="@+id/status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:tint="#ffffffff"
            android:layout_toRightOf="@+id/time"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/textChatItem"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="false" />
        <TextView
            android:text="19:00"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:textSize="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="2dp"
            android:textColor="#ffffffff"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/textChatItem"
            android:layout_alignRight="@+id/textChatItem"
            android:minHeight="4dp" />
    </RelativeLayout>
</LinearLayout><!-- From: file:/Users/Dani/Desktop/AppsAndroid/MemeticaMe/app/src/main/res/layout/bubble.xml -->