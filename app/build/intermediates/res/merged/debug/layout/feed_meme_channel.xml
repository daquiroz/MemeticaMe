<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/feedChat">
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/receiver" />
    <FrameLayout
        android:id="@+id/imagemaskframe"
        android:layout_width="73dp"
        android:layout_height="73dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:id="@+id/image"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:padding="5dp"
            android:layout_gravity="center" />

    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="4000dp"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Alberto LeÃ³n Salinas"
            android:id="@+id/nombrechat"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp" />
        <TextView
            android:text="Muy buenos consejos los que me diste la otra vez me tinca que no sera lo mismo para la proxiam no te parece mejor esta froma"
            android:id="@+id/message"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textColor="#999999"
            android:textIsSelectable="false"
            android:lines="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="48dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/time"
        android:textStyle="normal"
        android:textColor="#999999"
        android:gravity="right"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="7dp" />
    <TextView
        android:id="@+id/notRead"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:tint="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_alignParentTop="false"
        android:layout_marginTop="35dp" />
