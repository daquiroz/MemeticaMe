<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="#ffe7ecf5">
    <!-- Displays the text chat -->
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/relativeLayout1"
        android:background="#6290DA">
        <ImageButton
            android:src="@drawable/back"
            android:layout_width="78dp"
            android:layout_height="48dp"
            android:id="@+id/btVolverChat"
            android:background="@drawable/menubutton"
            android:paddingRight="38dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:src="@drawable/plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btAgregarMeme"
            android:layout_alignParentRight="true"
            android:tint="#ffffffff"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:background="@drawable/menubutton"
            android:layout_marginRight="40dp" />
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameCanal"
            android:layout_marginLeft="78dp"
            android:minLines="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#ffffffff"
            android:layout_marginRight="128dp"
            android:layout_centerVertical="true"
            android:text="Nombre Canal" />
        <ImageButton
            android:id="@+id/menu"
            android:background="@drawable/menubutton"
            android:src="@drawable/menu"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:scaleType="fitEnd"
            android:layout_alignParentRight="true"
            android:tint="#ffffffff"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/campoBusqueda"
                android:layout_weight="12.47" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btBuscar"
                android:src="@drawable/search"
                android:scaleType="fitCenter"
                android:tint="#6290DA"
                android:backgroundTint="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listviewMemes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ffe7ecf5"
        android:clipToPadding="false"
        android:listSelector="#00000000"
        android:divider="@null"
        android:layout_marginTop="88dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:choiceMode="singleChoice" />

</RelativeLayout>